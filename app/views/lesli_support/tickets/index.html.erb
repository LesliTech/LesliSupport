<%
columns = [{
    label: "ID",
    field: "id"
}, {
    label: "Subject",
    field: "subject"
}, {
    label: "User",
    field: "user_name"
}, {
    label: "Agent",
    field: "agent_name"
}, {
    label: "Priority",
    field: "priority_name"
}, {
    label: "Deadline",
    field: "deadline_string"
}]
%>

<%= render(LesliView::Layout::Container.new("support-tickets")) do %>

    <%= render(LesliView::Components::Header.new("Tickets", new_path:new_ticket_path)) %>
    <%= render(LesliView::Components::Toolbar.new()) %>

    <%= render(LesliView::Elements::Table.new(
        :columns => columns,
        :records => @tickets.dig(:records),
        link: -> (ticket) { ticket_path(ticket.id) }
    )) %>
<% end %>
